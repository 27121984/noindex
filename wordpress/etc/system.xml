<config>
    <sections>
        <wordpress_options>
            <label>Eshop Wordpress</label>
            <tab>eshop</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <eshop_wordpress>
                    <label>Opciones generales</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <wordpress_active translate="label">
                            <label>Activo</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </wordpress_active>
                        <block_id translate="label">
                            <label>Block Select</label>
                            <frontend_type>select</frontend_type>
                            <source_model>cms/resource_block_collection</source_model>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </block_id>
                        <rssfeed_url translate="label">
                            <label>URL del feed</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </rssfeed_url>
                        <description_char_limit translate="label">
                            <label>Límite de caracteres para la descripción</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>14</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </description_char_limit>
                    </fields>
                </eshop_wordpress>
            </groups>
        </wordpress_options>
    </sections>
</config>
